{
  "flex-center": {
    "prefix": "flex-center",
    "body": [
      "display: flex;",
      "justify-content: center;",
      "align-items: center;"
    ],
    "description": "Center with flexbox"
  },
  "full-screen-center": {
    "prefix": "fs-center",
    "body": [
      "height: 100vh;",
      "display: flex;",
      "justify-content: center;",
      "align-items: center;"
    ],
    "description": "Full-screen center using flexbox"
  },
  "border-box": {
    "prefix": "b-box",
    "body": ["box-sizing: border-box;"],
    "description": "Set box-sizing"
  },
  "transition-ease": {
    "prefix": "trans",
    "body": ["transition: all 0.3s ease;"],
    "description": "Simple transition"
  },
  "transform-rotate": {
    "prefix": "rot",
    "body": ["transform: rotate(${1:0}deg);"],
    "description": "Rotate transform"
  },
  "pos-abs-full": {
    "prefix": "abs-full",
    "body": [
      "position: absolute;",
      "left: 0;",
      "top: 0;",
      "width: 100%;",
      "height: 100%;"
    ],
    "description": "Absolute positioned full-size"
  },
  "text-no-dec": {
    "prefix": "no-dec",
    "body": ["text-decoration: none;"],
    "description": "Remove text decoration"
  },
  "vendor-transform": {
    "prefix": "v-transform",
    "body": [
      "-webkit-transform: ${1:rotate(0deg)};",
      "-ms-transform: ${1:rotate(0deg)};",
      "transform: ${1:rotate(0deg)};"
    ],
    "description": "Transform with vendor prefixes"
  },
  "animation-basic": {
    "prefix": "anim",
    "body": [
      "animation: ${1:name} ${2:1s} ${3:ease} ${4:0s} ${5:1} ${6:forwards};",
      "@keyframes ${1:name} {",
      "  from { ${7} }",
      "  to { ${8} }",
      "}"
    ],
    "description": "Create animation and keyframes"
  }
}
